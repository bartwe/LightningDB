<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>LightningDB</Description>
    <Authors>Ilya Lukyanov;Corey Kaylor</Authors>
    <TargetFramework>net5.0</TargetFramework>
    <AssemblyName>LightningDB</AssemblyName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AutoGenerateBindingRedirects>false</AutoGenerateBindingRedirects>
    <GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
    <Nullable>enable</Nullable>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Configurations>DebugLin64;DebugWin64</Configurations>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)'=='DebugWin64'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <NoWarn />
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)'=='DebugLin64'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <NoWarn />
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
  </PropertyGroup>
  
  <ItemGroup>
    <None Include="../../LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <None Include="runtimes\**\*.*">
      <Pack>true</Pack>
      <PackagePath>runtimes</PackagePath>
    </None>
    <None Include="LightningDB.targets" Pack="true" PackagePath="build" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Memory" Version="4.5.4" />
  </ItemGroup>
</Project>
